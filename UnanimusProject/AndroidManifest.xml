<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sjgilbert.unanimus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="22"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.sjgilbert.unanimus.UnanimusApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true">
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/parse_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/parse_client_key" />

        <activity
            android:name=".MakeGroupActivity"
            android:label="@string/make_group" >
        </activity>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

        <activity
            android:name="com.sjgilbert.unanimus.IntroPageActivity"
            android:label="@string/intro" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.LoginActivity"
            android:label="@string/login" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.RegisterActivity"
            android:label="@string/register" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.MainActivity"
            android:label="@string/main" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.GroupActivity"
            android:label="@string/group" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.StartupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.JoinGroupActivity"
            android:label="@string/join_group" >
        </activity>
    </application>

</manifest>
