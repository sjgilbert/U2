<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sjgilbert.unanimus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
    android:theme="@android:style/Theme.Light.NoTitleBar"
    android:name="com.sjgilbert.unanimus.UnanimusApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true">
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/parse_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/parse_client_key" />

        <activity
            android:name="com.sjgilbert.unanimus.MakeGroupActivity"
            android:label="@string/make_group_activity_title" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.IntroPageActivity"
            android:label="@string/intro_page_activity_title" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.LoginActivity"
            android:label="@string/intro_page_activity_login_link" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.RegisterActivity"
            android:label="@string/intro_page_activity_register_link" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.MainActivity"
            android:label="@string/main_activity_title" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.GroupActivity"
            android:label="@string/group_activity_title" >
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.StartupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sjgilbert.unanimus.JoinGroupActivity"
            android:label="@string/join_group_activity_title" >
        </activity>
    </application>

</manifest>

