<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_picker_activity"
    style="@style/RootLayoutStyle">
    <!--TODO:Change this shitty implementation -->
    <LinearLayout
        android:id="@+id/friend_picker_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/activity_title" />
    </LinearLayout>
    <ListView
        style="@style/MatchParent"
        android:id="@+id/friend_picker_list_view"
        android:layout_above="@+id/friend_picker_done_button"
        android:layout_below="@id/friend_picker_title_bar"/>
    <Button
        android:id="@+id/friend_picker_done_button"
        style="@style/ButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/done"/>
</RelativeLayout>