<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/group_activity">

    <include layout="@layout/activity_title" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/group_activity_group_name_tag"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/group_activity_creator_tag"
        android:gravity="center"
        android:id="@+id/group_created_by"/>

    <TextView
        android:paddingTop="50dp"
        android:id="@+id/members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/group_activity_members_tag" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/members_list"
        android:divider="#000000">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/group_play_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="@string/group_activity_play_game_button"
            android:padding="10dp"
            android:layout_weight=".5"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="@string/group_activity_view_button"
            android:padding="10dp"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>