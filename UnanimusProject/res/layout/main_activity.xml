<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity"
    style="@style/RootLayout">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:id="@+id/ma_linearLayout"
        style="@style/Margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/ma_prof_pic"
            style="@style/Padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ma_facebook_name"
            style="@style/TextView"
            android:layout_height="match_parent"
            android:textSize="@dimen/large_font" />
    </LinearLayout>

    <Button
        android:id="@+id/ma_friend_picker_button"
        style="@style/Button"
        android:onClick="ma_viewFriendPicker"
        android:text="@string/ma_friend_picker_button" />

    <Button
        android:id="@+id/ma_pick_place_link"
        style="@style/Button"
        android:onClick="ma_viewPlacePick"
        android:text="@string/ppa_title" />

    <Button
        android:id="@+id/ma_group_settings_picker_button"
        style="@style/Button"
        android:onClick="ma_viewGroupSettingsPicker"
        android:text="@string/gspa_title" />

    <Button
        android:id="@+id/ma_create_group_button"
        style="@style/Button"
        android:onClick="ma_viewCreateGroup"
        android:text="@string/cga_title" />
</LinearLayout>
