<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_activity">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/prof_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/join_group_activity_title"
            android:layout_weight="0.5"
            android:id="@+id/main_join_group"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/make_group_activity_title"
            android:layout_weight="0.5"
            android:id="@+id/main_make_group"/>
    </LinearLayout>

    <ListView
        android:id="@+id/groups_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/main_create_group">
    </ListView>

    <Button
        android:id="@+id/main_create_group"
        android:text="@string/main_create_group"
        android:padding="40dp"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</LinearLayout>
