<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity"
    style="@style/RootLayout">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:id="@+id/ma_linearLayout"
        style="@style/Margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/ma_facebook_name"
            style="@style/TextView"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="@dimen/large_font"
            android:text="@string/ma_groups"
            android:layout_gravity="center_vertical"/>

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/ma_prof_pic"
            style="@style/Padding"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/unanimus" />

    <ListView
        android:id="@+id/ma_groups_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/ma_create_group_button"
        style="@style/Button"
        android:onClick="ma_viewCreateGroup"
        android:text="@string/cga_title" />

</LinearLayout>
